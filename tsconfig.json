{
  "compilerOptions": {
    "jsx": "preserve",
    "strict": true,
    "target": "es2022",
    "module": "esnext",
    "noEmit": true,
    "allowJs": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": { "@/*": ["src/*"], "#/*": [".generated/*"] },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types.d.ts",
    "next-env.d.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "scripts/templates"]
}
