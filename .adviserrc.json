{
  "plugins": ["dependencies", "lighthouse", "webhint"],
  "rules": {
    "package-json-properties": [
      "error",
      {
        "required": ["name", "private", "scripts", "engines", "dependencies", "husky", "browserslist"]
      }
    ],
    "root-files": [
      "error",
      {
        "required": [
          ".gitignore",
          "commitlint.config.js",
          ".editorconfig",
          ".eslintrc.json",
          ".prettierrc",
          ".stylelintrc",
          "README.md"
        ],
        "blacklist": []
      }
    ],
    "lighthouse/scores": [
      "error",
      {
        "best-practices": 0.9,
        "pwa": 0.5,
        "seo": 0.9,
        "accessibility": 0.9,
        "performance": 0.9
      }
    ],
    "lighthouse/audits": [
      "error",
      {
        "viewport": 1,
        "without-javascript": 1,
        "first-contentful-paint": 0.85,
        "first-meaningful-paint": 0.85,
        "load-fast-enough-for-pwa": 1,
        "estimated-input-latency": 1,
        "total-blocking-time": 0.9,
        "max-potential-fid": 0.8,
        "errors-in-console": 1,
        "time-to-first-byte": 1,
        "first-cpu-idle": 0.9,
        "interactive": 0.9,
        "redirects": 1,
        "installable-manifest": 1,
        "apple-touch-icon": 1,
        "splash-screen": 1,
        "themed-omnibox": 1,
        "content-width": 1,
        "image-aspect-ratio": 1,
        "deprecations": 1,
        "mainthread-work-breakdown": 0.85,
        "bootup-time": 0.9,
        "uses-rel-preload": 1,
        "uses-rel-preconnect": 1,
        "font-display": 1,
        "third-party-summary": 1,
        "aria-allowed-attr": 1,
        "aria-required-attr": 1,
        "aria-required-children": 1,
        "aria-required-parent": 1,
        "aria-roles": 1,
        "aria-valid-attr-value": 1,
        "aria-valid-attr": 1,
        "button-name": 1,
        "bypass": 1,
        "color-contrast": 1,
        "document-title": 1,
        "duplicate-id": 1,
        "html-has-lang": 1,
        "html-lang-valid": 1,
        "image-alt": 1,
        "label": 1,
        "link-name": 1,
        "meta-viewport": 1,
        "tabindex": 1,
        "total-byte-weight": 1,
        "offscreen-images": 1,
        "render-blocking-resources": 1,
        "unminified-css": 1,
        "unminified-javascript": 1,
        "unused-css-rules": 1,
        "uses-webp-images": 1,
        "uses-optimized-images": 1,
        "uses-text-compression": 1,
        "uses-responsive-images": 1,
        "efficient-animated-content": 1,
        "appcache-manifest": 1,
        "doctype": 1,
        "dom-size": 1,
        "external-anchors-use-rel-noopener": 1,
        "geolocation-on-start": 1,
        "no-document-write": 1,
        "no-vulnerable-libraries": 1,
        "js-libraries": 1,
        "notification-on-start": 1,
        "password-inputs-can-be-pasted-into": 1,
        "uses-passive-event-listeners": 1,
        "meta-description": 1,
        "http-status-code": 1,
        "font-size": 1,
        "link-text": 1,
        "robots-txt": 1,
        "tap-targets": 1,
        "hreflang": 1,
        "plugins": 1
      }
    ],
    "webhint/hints": [
      "error",
      {
        "ignore": [],
        "minSeverity": 3
      }
    ],
    "dependencies/not-allowed-packages": [
      "error",
      {
        "packages": ["jquery", "lodash"]
      }
    ],
    "dependencies/min-vulnerabilities-allow": [
      "error",
      {
        "level": "high",
        "skip": ["1219"]
      }
    ],
    "dependencies/outdated-packages": [
      "warn",
      {
        "criteria": "major",
        "exclude": ["gsap"]
      }
    ],
    "dependencies/package-size": [
      "warn",
      {
        "threshold": 60
      }
    ],
    "dependencies/unused-packages": ["warn"],
    "dependencies/licenses-whitelist": [
      "error",
      {
        "whitelist": [
          "AFL-2.1",
          "AFL-3.0",
          "APSL-2.0",
          "Apache-1.1",
          "Apache-2.0",
          "Artistic-1.0",
          "Artistic-2.0",
          "BSD-2-Clause",
          "BSD-3-Clause",
          "BSL-1.0",
          "CC-BY-1.0",
          "CC-BY-2.0",
          "CC-BY-2.5",
          "CC-BY-3.0",
          "CC-BY-4.0",
          "CC0-1.0",
          "CDDL-1.0",
          "CDDL-1.1",
          "CPL-1.0",
          "EPL-1.0",
          "FTL",
          "GPL-3.0",
          "IPL-1.0",
          "ISC",
          "LGPL-2.0",
          "LGPL-2.1",
          "LGPL-3.0",
          "LPL-1.02",
          "MIT",
          "MPL-1.0",
          "MPL-1.1",
          "MPL-2.0",
          "MS-PL",
          "NCSA",
          "OpenSSL",
          "PHP-3.0",
          "Ruby",
          "Unlicense",
          "W3C",
          "Xnet",
          "ZPL-2.0",
          "Zend-2.0",
          "Zlib",
          "libtiff",
          "BSD-3-Clause OR MIT",
          "(MIT OR Apache-2.0)",
          "MPL-2.0 OR Apache-2.0",
          "(MIT AND Zlib)",
          "(WTFPL OR MIT)",
          "(BSD-2-Clause OR MIT OR Apache-2.0)",
          "(MIT AND BSD-3-Clause)"
        ],
        "excludePackage": [
          "async-foreach@0.1.3",
          "fast-shallow-equal@1.0.0",
          "rework@1.0.1",
          "use-subscription@1.1.1",
          "gsap@3.1.1",
          "ignore-loader@0.1.2",
          "nano-css@5.3.0",
          "json-schema@0.2.3",
          "jam3-dev@0.1.0"
        ],
        "includeNoProdPackages": false
      }
    ]
  },
  "settings": {
    "lighthouse": {
      "url": "http://localhost:5000",
      "configPath": "dev.lighthouse.config.json"
    },
    "webhint": {
      "url": "http://localhost:5000",
      "configPath": "dev.wh.config.json"
    },
    "tags": {
      "dev": [
        "package-json-properties",
        "root-files",
        "dependencies/not-allowed-packages",
        "dependencies/min-vulnerabilities-allow"
      ],
      "lighthouse": ["lighthouse/scores", "lighthouse/audits"],
      "webhint": ["webhint/hints"],
      "stage": [
        "dependencies/outdated-packages",
        "dependencies/licenses-whitelist",
        "dependencies/package-size",
        "dependencies/unused-packages"
      ]
    }
  }
}
